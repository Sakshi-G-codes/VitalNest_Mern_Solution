<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VitalNest</title>
    <link rel = "stylesheet" href = "/static/style.css">
</head>
<body style="background-color:#ebf9fa;">
    <h1 class="admin_user_approval_card_heading">VitalNest Hospital Dashboard - <%= hsp_id %></h1>
    <hr>
    <h2 style="text-align: center;"><span>&#128522</span> Where life begins again...........</h2>
    <div class="image-row">
        <img src="/static/dashboard.jpg" alt="hospital">
        <img src="/static/Doctor_Holding_Stethoscope.webp" alt="doctor">
        <img src="/static/Older-patient.jpg" alt="patient">
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">Patient Billing</h2>
        <div class="admin_patient_record_card_design">
            <form action="/billPatient" method="post">
                <input type="hidden" name="hsp_id" value="<%= hsp_id %>">

                <label for="aadhar">Aadhar ID :</label>
                <input type="text" id="aadhar" name="aadhar" pattern="\d{12}" maxlength="12" minlength="12" required><br><br>

                <label for="item">Item :</label>
                <select id="item" name="item" required>
                    <% patient_meds.forEach(med => { %>
                    <option value="<%= med.med_name %>"><%= med.med_name %> (Qty: <%= med.quantity %>)</option>
                    <% }) %>
                    <% blood_units.forEach(blood => { %>
                    <option value="<%= blood.blood_group %>"><%= blood.blood_group %> (Units: <%= blood.units %>)</option>
                    <% }) %>
                </select><br><br>

                <label for="quantity">Quantity :</label>
                <input type="number" id="quantity" name="quantity" min="1" max="30" required><br><br>

                <button class="admin_patient_record_button_design" type="submit">Submit</button>
            </form>
        </div>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">Patient Treatment Records Updation</h2>
        <div class="admin_patient_record_card_design">
            <form action="/addTreatmentRecord" method="post">
                <input type="hidden" name="hsp_id" value="<%= hsp_id %>">

                <label for="p_id">Patient ID (Aadhar):</label><br>
                <input type="text" id="p_id" name="p_id" pattern="\d{12}" maxlength="12" minlength="12" required><br><br>

                <label for="disease_remark">Disease Remark:</label><br>
                <input type="text" id="disease_remark" name="disease_remark" maxlength="50"><br><br>

                <label for="treatment_remark">Treatment Remark:</label><br>
                <input type="text" id="treatment_remark" name="treatment_remark" maxlength="50"><br><br>

                <button class="admin_patient_record_button_design" type="submit">Submit</button>
            </form>
        </div>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">Search for Patient Records</h2>
        <div class="admin_patient_record_card_design">
            <form action="/patientRecords" method="post">
                <input type="hidden" name="hsp_id" value="<%= hsp_id %>">

                <label for="aadhar">Patient ID (Aadhar):</label><br>
                <input type="text" id="p_id" name="aadhar" pattern="\d{12}" maxlength="12" minlength="12" required><br><br>

                <button class="admin_patient_record_button_design" type="submit">Submit</button>
            </form>
        </div>
    </div>
    <div>
        <h2 style="text-align: center;">Medicinal Data</h2>
        <table border="1.5" cellpadding="15" cellspacing="0" style="margin: auto; background-color: rgb(250, 240, 255);">
            <thead>
                <tr>
                    <th>Supplier ID</th>
                    <th>Medicine Name</th>
                    <th>Quantity</th>
                    <th>Industry ID</th>
                    <th>Request Inventory</th>
                </tr>
            </thead>
            <tbody style="background-color: white;">
                <% data.forEach(record => { %>
                <tr>
                    <td><%= record.supplier_id %></td>
                    <td><%= record.medicine_name %></td>
                    <td><%= record.quantity %></td>
                    <td><%= record.ind_id %></td>
                    <td>
                        <form action="/requestInventoryByHospital" method="post">
                            <input type="hidden" name="supplier_id" value="<%= record.supplier_id %>">
                            <input type="hidden" name="ind_id" value="<%= record.ind_id %>">
                            <input type="hidden" name="med_name" value="<%= record.medicine_name %>">
                            <input type="hidden" name="hsp_id" value="<%= hsp_id %>">
                            <input type="number" min="100" max="5000" name="quant">
                            <button class="supplier_dashboard_request_button" type="submit">Request</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">View Patient Bills</h2>
        <div class="admin_patient_record_card_design">
            <form action="/viewPatientBills" method="post">
                <input type="hidden" name="hsp_id" value="<%= hsp_id %>">
                <label for="p_id">Patient ID (Aadhar):</label><br>
                <input type="text" id="p_id" name="p_id" pattern="\d{12}" maxlength="12" minlength="12" required><br><br>
                <button class="admin_patient_record_button_design" type="submit">View Bills</button>
            </form>
        </div>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">Create Crowdfunding Demand</h2>
        <div class="admin_patient_record_card_design">
            <form action="/createCrowdfundingDemand" method="post">
                <label for="p_id">Patient ID (Aadhar):</label><br>
                <input type="text" id="p_id" name="p_id" pattern="\d{12}" maxlength="12" minlength="12" required><br><br>
                <label for="total_demand">Total Demand:</label><br>
                <input type="number" id="total_demand" name="total_demand" min="1" required><br><br>
                <label for="required_donation">Required Donation:</label><br>
                <input type="number" id="required_donation" name="required_donation" min="1" required><br><br>
                <button class="admin_patient_record_button_design" type="submit">Create Demand</button>
            </form>
        </div>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">View Crowdfunding Demands</h2>
        <div class="admin_patient_record_card_design">
            <form action="/viewCrowdfundingDemands" method="get">
                <button class="admin_patient_record_button_design" type="submit">View Demands</button>
            </form>
        </div>
    </div>
    <hr>
    <div>
        <h2 style="text-align: center;">Pending Visit Requests</h2>
        <% if (pending_visits && pending_visits.length > 0) { %>
        <table border="1.5" cellpadding="15" cellspacing="0" style="margin: auto; background-color: rgb(250, 240, 255);">
            <thead>
                <tr>
                    <th>Rep ID</th>
                    <th>Medicine</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody style="background-color: white;">
                <% pending_visits.forEach(visit => { %>
                <tr>
                    <td><%= visit.rep_id %></td>
                    <td><%= visit.medicine_name %></td>
                    <td>
                        <form method="post" action="/confirmVisit">
                            <input type="hidden" name="rep_id" value="<%= visit.rep_id %>">
                            <input type="hidden" name="medicine_name" value="<%= visit.medicine_name %>">
                            <input type="hidden" name="hsp_id" value="<%= hsp_id %>">
                            <input type="hidden" name="ind_id" value="<%= visit.ind_id %>">
                            <button class="admin_patient_record_button_design" type="submit">Confirm Visit</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p style="text-align: center;">No pending visit requests.</p>
        <% } %>
    </div>



</body>
</html>
